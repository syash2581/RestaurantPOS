<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1000000000">

        <TextView
            android:id="@+id/tvClosedOrderName"
            android:text="YASH SHAH"
            android:textStyle="bold"
            android:textSize="30sp"
            android:fontFamily="cursive"
            android:layout_width="wrap_content"
            android:textColor="@color/lightorange"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvClosedOrderBlockNum"
            android:text="B : 1"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/purple_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvClosedOrderNumberOfItems"
            android:text="T : 1"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvClosedOrderDate"
            android:text="T : 1"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_weight="1"
        android:layout_marginEnd="20dp">
        <TextView
            android:id="@+id/tvClosedOrderTotalAmt"
            android:text="YASH SHAH"
            android:textStyle="bold"
            android:textSize="30sp"
            android:fontFamily="cursive"
            android:layout_width="wrap_content"
            android:textColor="@color/lightorange"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvClosedOrderTableNum"
            android:text="B : 1"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/purple_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvClosedOrderMethod"
            android:text="T : 1"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>