<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
android:layout_weight="3"
            android:padding="20dp"
            android:id="@+id/tvPaymentName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="30sp"
            android:fontFamily="cursive"
            android:textColor="@color/lightorange"/>
        <TextView
android:layout_weight="3"
            android:padding="20dp"
            android:id="@+id/tvPaymentBlock"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/lightorange"/>
        <TextView
            android:layout_weight="3"
            android:padding="20dp"
            android:id="@+id/tvPaymentTable"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/lightorange"/>
    </LinearLayout>

    <ListView
        android:id="@+id/lvfinalBill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10000000000000000000"/>

    <Button
        android:id="@+id/btnFinalCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="end"
        android:textStyle="bold"
        android:text="PAY 2500 â‚¹"
        android:drawableLeft="@drawable/ic_baseline_payment_24"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>